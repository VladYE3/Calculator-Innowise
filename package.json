{
  "name": "calculator-innowise",
  "version": "1.0.0",
  "description": "Калькулятор с переключением темы и линтингом через Husky + lint-staged",
  "type": "module",
  "scripts": {
    "prepare": "husky install .husky",
    "lint": "eslint \"**/*.js\"",
    "format": "prettier --write \"**/*.{js,css,html}\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "*.js": [
      "eslint --max-warnings=0 --fix"
    ],
    "*.{css,html}": [
      "prettier --write"
    ]
  }
}
